{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "target/compiled",
        "rootDir": "./src/ts",
        "declaration": false
    },
    "include": ["src/ts"],
    "tstl": {
        "luaTarget": "5.3",
        "noHeader": true,
        "luaLibImport": "always",
        "noImplicitSelf": true
    }
}
